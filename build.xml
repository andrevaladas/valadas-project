		<property name="xsd-file" value="xsd/cancNFe_v2.00.xsd"/>
		
		<mkdir dir="${schema-nfe}" />
		<xjc destdir="src" 
			schema="${xsd-file}" 
			removeOldOutput="yes" 
			package="${package-nfe}">
		  <produces dir="${schema-nfe}" includes="* impl/*" />
