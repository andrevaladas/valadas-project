<project name="nfeXML" default="_dist-xml2" basedir=".">
	<property environment="env"/>
	<property file="build.properties"/>

	<property name="bin" value="bin"/>
	<property name="src" value="src"/>
	<property name="lib" value="lib"/>

	<path id="class.path">		
		<fileset dir="${lib}">
	    	<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<target name="prepare-xml2">
		<mkdir dir="${build.dist}/${project.xml}"/>
	</target>

	<target name="compile-xml2" depends="prepare-xml2">
		<javac classpathref="class.path" srcdir="${src}" destdir="${bin}" includeantruntime="true" />
	</target>

	<target name="jar-xml2" depends="compile-xml2" >
		<property name="jar" value="${project.xml.jar}"/>
		
	 	<jar destfile="${build.dist}/${project.xml}/${jar}">
			<fileset dir="${bin}"/>
	 		<manifest>
	 			<attribute name="Built-By" value="${user.name}"/>
	 			<attribute name="OS" value="${os.name}"/>
	 			<attribute name="OS-Version" value="${os.version}"/>
	 			<attribute name="Main-Class" value=""/>
	 			<attribute name="Class-Path" value=""/>
	 		</manifest>
 		</jar>
	</target>

	<target name="_dist-xml2" depends="jar-xml2">

	</target>
	
	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
	  <classpath>
	    <fileset dir="c:/java/jaxb-ri/lib" includes="*.jar" />
	  </classpath>
	</taskdef>
	
